<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Địa chỉ nhận hàng"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edt_checkout_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Họ và tên người nhận"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edt_checkout_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/edt_checkout_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Địa chỉ chi tiết (Số nhà, đường, quận/huyện...)"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:gravity="top"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng thanh toán"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF"
                android:padding="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng tiền hàng:"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/txt_checkout_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0đ"
                    android:textStyle="bold"
                    android:textColor="#D32F2F"
                    android:textSize="18sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_confirm_order"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="ĐẶT HÀNG"
        android:textStyle="bold"
        android:textSize="16sp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"/>

</LinearLayout>